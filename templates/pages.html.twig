{% extends 'base.html.twig' %}
{% block title %}{{ file }}{% endblock %}
{% block body %}
	<div class="container" style="margin-top: 60px;margin-bottom: 60px;">

		<nav class="navbar navbar-default">
		  <div class="container-fluid">
		    <div class="navbar-header">
		      <a class="navbar-brand" href="#">
		        <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
		        {{file}}
		      </a>
		    </div>
		  </div>
		</nav>

		<div class="row" style="margin: 40px 0;">
			<div class="col-sm-6"><h4>Pages <small>{{detail.Pages}}</small></h4></div>
			<div class="col-sm-6 text-right	"><h4>File Size <small>{{size}}</small></h4></div>
		</div>

		<div class="row">
			 {% for key,page in pages %}
				  <a href="{{base_url()}}/public/pages/{{docid}}/{{key+1}}" class="col-sm-6 col-md-3">
				    <div class="thumbnail">
				      <img src="{{base_url()}}/uploads/pages/{{docid}}/{{key+1}}" class="img-responsive">
				      <div class="caption">
				        <h3 style="text-align: center;">Page {{key + 1}}</h3>
				      </div>
				    </div>
				  </a>
			 {% endfor %}
		</div>
	</div>
{% endblock %}